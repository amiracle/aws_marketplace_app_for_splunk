<form>
  <label>Daily Business Report</label>
  <description>Daily business reports for Marketplace</description>
  <fieldset submitButton="true" autoRun="true">
    <input type="time" token="time" searchWhenChanged="true">
      <label>Time</label>
      <default>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </default>
    </input>
    <input type="dropdown" token="st" searchWhenChanged="true">
      <label>sourcetype</label>
      <choice value="aws:csv:*">All</choice>
      <fieldForLabel>sourcetype</fieldForLabel>
      <fieldForValue>sourcetype</fieldForValue>
      <search>
        <query>sourcetype=aws:csv:* | stats count by sourcetype</query>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </search>
      <default>aws:csv:daily_business_usage_by_instance_type</default>
      <initialValue>aws:csv:daily_business_usage_by_instance_type</initialValue>
    </input>
    <input type="dropdown" token="product" searchWhenChanged="true">
      <label>Product</label>
      <fieldForLabel>Product_Title</fieldForLabel>
      <fieldForValue>Product_Title</fieldForValue>
      <search>
        <query>source=*.csv sourcetype="aws:csv:daily_business_usage_by_instance_type" Product_Title!="Product Title"| stats count(Customer_AWS_Account_Number) AS "Count" by Product_Title</query>
        <earliest>-7d@h</earliest>
        <latest>now</latest>
      </search>
      <choice value="*">All</choice>
      <default>*</default>
      <initialValue>*</initialValue>
    </input>
  </fieldset>
  <row>
    <panel>
      <title>Quarterly Results</title>
      <table>
        <search>
          <query>sourcetype="aws:csv:daily_business_usage_by_instance_type"  source=*.csv  | rex field=source "^\w+\d+://\w+\-\w+\-\w+/\w+_\w+_\w+_\w+_\w+_(?P&lt;kdate&gt;[^\.]+)" | eval newtime=strptime(kdate,"%Y-%m-%d") | eval _time=newtime | timechart sum("Estimated_Revenue") as "Revenue" span=3mon | fieldformat Revenue = "$USD ".tostring(Revenue, "commas") | sort - "Revenue"</query>
          <earliest>0</earliest>
          <latest></latest>
        </search>
        <option name="count">10</option>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <title>Distinct Count of Customer Email Domains</title>
      <single>
        <search>
          <query>source="*.csv"  sourcetype="$st$" Customer_Email_Domain!="Customer Email Domain" Product_Title="$product$"| stats dc(Customer_Email_Domain)</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </single>
    </panel>
    <panel>
      <title>Estimated Revenues Total (in USD)</title>
      <single>
        <search>
          <query>sourcetype="aws:csv:daily_business_usage_by_instance_type"  source=*.csv |stats sum("Estimated_Revenue") as "Estimated Revenues USD"</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="drilldown">none</option>
        <option name="numberPrecision">0.00</option>
        <option name="rangeColors">["0x53a051","0x0877a6","0xf8be34","0xf1813f","0xdc4e41"]</option>
        <option name="refresh.display">progressbar</option>
        <option name="unit">$</option>
        <option name="unitPosition">before</option>
      </single>
    </panel>
    <panel>
      <title>Total Unique AWS Account IDs</title>
      <single>
        <search>
          <query>source="*.csv" sourcetype="$st$" Product_Title="$product$" Product_Title!="Product Title" | stats dc(Customer_AWS_Account_Number)</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </single>
    </panel>
    <panel>
      <title>Average Hours</title>
      <single>
        <search>
          <query>source=*.csv sourcetype="aws:csv:daily_business_usage_by_instance_type" Instance_Type!="Instance Type" | stats avg(Usage_Units) AS "A_Hours" | eval "Average Hours"=round(A_Hours) | table "Average Hours"</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </single>
    </panel>
    <panel>
      <single>
        <title>Total Transactions</title>
        <search>
          <query>source=*.csv sourcetype="$st$" Customer_AWS_Account_Number!="Customer AWS Account Number" Product_Title="$product$" | stats dc(Customer_AWS_Account_Number)</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </single>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <title>Revenue by Account Number</title>
        <search>
          <query>source=*.csv sourcetype="$st$" Instance_Type!="Instance Type" Product_Title="$product$" | stats sum(Estimated_Revenue) AS Revenue by Customer_AWS_Account_Number | sort - Revenue</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </table>
    </panel>
    <panel>
      <table>
        <title>Amount by Customer Email Domain</title>
        <search>
          <query>source="*.csv" sourcetype="$st$" Product_Title!="Product Title" Product_Title="$product$" | stats sum(Estimated_Revenue) AS Revenue by Customer_Email_Domain | fieldformat Revenue = "$USD ".tostring(Revenue, "commas") | sort - "Revenue"</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
        <option name="count">10</option>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </table>
    </panel>
    <panel>
      <table>
        <title>Count by Product</title>
        <search>
          <query>source="*.csv" sourcetype="$st$" Product_Title!="Product Title" | stats count(Customer_AWS_Account_Number) AS "Count" by Product_Title</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <chart>
        <title>Estimated Revenue by Instance Type</title>
        <search>
          <query>source=*.csv sourcetype="aws:csv:daily_business_usage_by_instance_type" Instance_Type!="Instance Type" Product_Title="$product$"| stats sum(Estimated_Revenue) AS Revenue by Instance_Type | sort - Revenue</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
        <option name="charting.chart">pie</option>
        <option name="charting.drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </chart>
    </panel>
    <panel>
      <chart>
        <title>Deployed Instance Types</title>
        <search>
          <query>source=*.csv sourcetype="aws:csv:daily_business_usage_by_instance_type" Instance_Type!="Instance Type" Product_Title="$product$"| eval it=split(Instance_Type, "."), its=mvindex(it, 0) | stats count by its</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
        <option name="charting.chart">pie</option>
        <option name="charting.drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </chart>
    </panel>
  </row>
</form>